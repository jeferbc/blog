<div class="blog-header">
    <h1 class="blog-title">
        <%= config.author %>
    </h1>
    <p class="lead blog-description">
        <%= config.subtitle %>
    </p>
</div>

<div class='row'>
    <div class="col-sm-8 blog-main">
        <% page.posts.each(function(post){ %>
        <div class="blog-post">
            <h2 class="blog-post-title"> <a href="<%- url_for(post.path) %>">
                    <%= post.title %>
                </a></h2>
            <p class="blog-post-meta">
                <%= date(post.date, config.date_format) %>
            </p>
            <% if(post.excerpt) { %>
            <p>
                <%- post.excerpt %>
            </p>
            <% } %>
        </div>
        <% }) %>
    </div>
</div>
